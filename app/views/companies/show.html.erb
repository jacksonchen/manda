<div class="container-fluid">
  <div class="col-md-3"></div>
  <div class="col-md-6 centerContent">
    <aside>
      <%= image_tag(@company.logo) %>
    </aside>
    <section>
      <div>
        <%= @company.name %>
      </div>
      <div>
        $<%= @company.price %> for <%= @company.available %>% of the company
      </div>
    </section>
    <section>
      <div class="title">
        Company Info:
      </div>
      <p>
        <%= @company.about %>
      </p>
    </section>
    <section>
      <%= link_to "Message", conversations_path(company: @company), method: :post %>
    </section>
  </div>
  <div class="col-md-3"></div>
</div>
