<div class="container-fluid">
  <div class="col-md-3"></div>
  <div class="col-md-6 content">
    <h3>Conversations</h3>
    <ul class="list-group">
      <% @conversations.each do |conversation| %>
        <%= link_to(conversation_path(conversation)) do %>
          <li class="list-group-item">
            <%= conversation.getPartner(current_user) %>
            <% if current_user.has_notifications > 0 %>
              <span class="badge badge-default badge-pill"><%= current_user.has_notifications%></span>
            <% end %>
          </li>
        <% end %>
      <% end %>
      <% if @conversations.empty? %>
        <p>You have no conversations at this time. Start one by browsing the marketplace!</p>
      <% end %>
    </ul>
  </div>
  <div class="col-md-3"></div>
</div>
