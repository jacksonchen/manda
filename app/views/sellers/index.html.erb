<div class="container-fluid">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h3>Investors</h3>
    <% if @buyers.length == 0 %>
      There are no buyers right now. Please check back later!
    <% else %>
      <% @buyers.each do |buyer| %>
        <%= link_to buyer_path(buyer) do %>
          <div class="companyBlock">
            <div class="summary">
              <div class="text">
                <%= buyer.summary %>
              </div>
            </div>
            <div class="details">
              <%= buyer.business_role %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>
